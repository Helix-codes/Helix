{
    "name": "@helix/sdk",
    "version": "0.1.0",
    "description": "TypeScript SDK for Helix permanent encrypted storage on Solana + Arweave",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Helix-codes/helix-sdk"
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "lint": "eslint src --ext .ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@irys/sdk": "^0.2.0",
        "@solana/web3.js": "^1.87.0",
        "@solana/wallet-adapter-base": "^0.9.23",
        "tweetnacl": "^1.0.3"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "eslint": "^8.55.0",
        "tsup": "^8.0.1",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "peerDependencies": {
        "@solana/web3.js": "^1.87.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "dist",
        "src"
    ],
    "keywords": [
        "solana",
        "arweave",
        "storage",
        "encryption",
        "helix",
        "permanent",
        "decentralized"
    ]
}